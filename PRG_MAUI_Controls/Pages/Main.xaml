                    Stroke="Black"
                    StrokeThickness="1"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GoToAlert" />
                </Border.GestureRecognizers>
                <Label 
                   Text="Popup-ruta"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            </Border>

